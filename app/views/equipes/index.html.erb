<div id="pessoas">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Equipes Cadastradas</h3>

      <div class="box-tools">
      </div>
    </div>

    <div class="box-body no-padding">

    <% if @pessoas.exists? %>
      <table class="table">
        <thead>
          <tr>
            <th width="45%">Nome</th>
            <th width="10%">Função</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pessoas.each do |pessoa| %>
          <tr>
            <td><%= pessoa.nome %></td>
            <td><%= pessoa.funcao.try(:nome) %></td>
            <td>
              <%= link_to 'Show', pessoa %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
      <div class="box-body">
        <div class="callout callout-danger">
          <h4>Não foram encontrados Resultados no Banco</h4>

          <p>Por favor, verifique os termos utilizados na busca.</p>
        </div>
        <%= link_to 'Pessoas', pessoas_path, class: 'btn btn-sm btn-primary' %>
      </div>
      <% end %>
    </div>
    <div class="box-footer clearfix">
        <%= page_entries_info @pessoas %>
      <div class="kaminari">
        <%= paginate @pessoas %>
      </div>
    </div>
  </div>
</div>