
<div class="box-body">

  <%= form_with(model: bairro, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, id: :bairro_nome, class: 'form-control input-sm' %>
    <%= form.error_span(:nome) %>
  </div>

  <div class="form-group">
    <%= form.label :cidade_id %>
    <%= render :partial => 'bairros_cidades_select2', :locals => {:form => form} %>
    <%= form.error_span(:cidade_id) %>
  </div>

  <div class="box-footer">
    <%= form.submit 'Salvar Registro', class: 'btn btn-primary' %>
    <%= link_to 'Cancelar', bairros_path, class: 'btn btn-warning' %>
  </div>
  <% end %>

</div>
