<div id="pessoas">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Seguimentos Cadastradas</h3>

      <div class="box-tools">
        <%= link_to 'Novo Cadastro', new_seguimento_path, class: 'btn btn-sm btn-primary' %>
      </div>
    </div>

    <div class="box-body no-padding">

      <table class="table">
        <thead>
          <tr>
            <th width="85%">Nome</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @seguimentos.each do |seguimento| %>
          <tr>
            <td><%= seguimento.nome %></td>
            <td>
            <%= link_to 'Edit', edit_seguimento_path(seguimento), class: 'btn btn-xs btn-primary' %>
              <%= link_to 'Destroy', seguimento, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
