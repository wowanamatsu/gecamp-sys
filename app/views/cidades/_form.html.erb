
<div class="box-body">

  <%= form_with(model: cidade, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, id: :cidade_nome, class: 'form-control input-sm' %>
    <%= form.error_span(:nome) %>
  </div>

  <div class="form-group">
    <%= form.label :municipio_id %>
    <%#= form.collection_select :municipio_id, municipios, :id, :nome, {prompt: 'Selecione'}, {class: 'form-control municipios'} %>
    <select id="municipios" class="form-control" name="cidade[municipio_id]">
      <option value="">Selecione</option>
    </select>
    <%= form.error_span(:municipio_id) %>
  </div>

  <div class="box-footer">
    <%= form.submit 'Salvar Registro', class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>
