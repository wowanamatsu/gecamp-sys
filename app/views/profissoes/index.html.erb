<div id="pessoas">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Profiss√µes Cadastradas</h3>

      <div class="box-tools">
        <%= link_to 'Novo Cadastro', new_profissao_path, class: 'btn btn-sm btn-primary' %>
      </div>
    </div>

    <div class="box-body no-padding">

      <table class="table">
        <thead>
          <tr>
          <th width="85%">Nome</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @profissoes.each do |profissao| %>
          <tr>
            <td><%= profissao.nome %></td>
            <td>
             <%= link_to 'Edit', edit_profissao_path(profissao), class: 'btn btn-xs btn-primary' %>
             <%= link_to 'Destroy', profissao, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
           </tr>
           <% end %>
         </tbody>
       </table>
     </div>
   </div>
 </div>
