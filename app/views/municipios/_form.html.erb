
<div class="box-body">
  <%= form_with(model: municipio, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, id: :municipio_nome, placeholder: 'Nome', class: 'form-control input-sm' %>
    <%= form.error_span(:nome) %>
  </div>

  <div class="form-group">
    <%= form.label :estado_id %>
    <%= form.error_span(:estado_id) %>
    <%= form.collection_select :estado_id, Estado.order(:nome), :id, :nome, {prompt: 'Selecione'}, {class: 'form-control'} %>
  </div>

  <div class="box-footer">
    <%= form.submit 'Salvar Registro', class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>
